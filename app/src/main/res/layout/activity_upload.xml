<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sleep"
    >
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/back"
        android:id="@+id/sleepBack2"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_above="@+id/qqnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="5dp"
        android:text="    手机上传功能太鸡肋, 试卷课件等资源直接发到我QQ吧~~ "
        />


    <LinearLayout
        android:id="@+id/qqnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/copyCue"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/copyIvUp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/qq"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/copyTvUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="596954885"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/copyCue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:textColor="#cbcbcb"
        android:textSize="10sp"
        android:text="(点击复制qq号)"/>


</RelativeLayout>
